
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>服装編集</h1>
        <%= form_with model: @equipment, url: equipment_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :title, class: "label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body, class: "label" %>
            <%= f.text_area :body, class: "form-control", size: "200x10" %>
          </div>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: 'form-control mb-3', accept: 'image/*' %>
          </div>
          <div class='mt-3 mb-3'>
          </div>
          <%= f.submit '編集する', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
