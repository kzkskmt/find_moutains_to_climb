<section class='registration-section' id='registration'>
  <div class='container px-4 px-lg-5'>
      <div class='card o-hidden border-0 shadow-lg my-5'>
          <div class='card-body p-0'>
              <div class='row'>
                  <div class='col-lg-5 d-none d-lg-block bg-register-image'></div>
                  <div class='col-lg-7'>
                      <div class='p-5'>
                          <div class='text-center'>
                              <h1 class='h4 text-gray-900 mb-4'>新規登録</h1>
                          </div>
                          <%= form_with model: @user, local: true do |f| %>
                            <%= render partial: 'shared/error_messages', locals: { model: @user } %>
                            <div class='form-group'>
                                <%= f.text_field :name, class: 'form-control', placeholder: User.human_attribute_name(:name) %>
                            </div>
                            <div class='form-group'>
                              <%= f.text_field :email, class: 'form-control form-control-user', placeholder: User.human_attribute_name(:email) %>
                            </div>
                            <div class='form-group row'>
                              <div class='col-sm-6 mb-3 mb-sm-0'>
                                <%= f.password_field :password, class: 'form-control', placeholder: User.human_attribute_name(:password) %>
                              </div>
                              <div class='col-sm-6'>
                                <%= f.password_field :password_confirmation, class: 'form-control', placeholder: User.human_attribute_name(:password_confirmation) %>
                              </div>
                            </div>
                            <%= f.submit '新規登録', class: 'btn btn-primary btn-user btn-block' %>
                          <% end %>
                          <hr>
                          <div class='text-center'>
                            <%= link_to 'ログインはこちら', login_path, class: 'small', 'data-turbolinks': false %>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>