<body class="bg-gradient-primary">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>

                            <%= form_with model: @user, local: true do |f| %>
                              <div class="form-group">
                                  <%= f.text_field :name, class: "form-control", placeholder: 'name' %>
                              </div>
                              <div class="form-group">
                                <%= f.text_field :email, class: "form-control form-control-user", placeholder: 'email' %>
                              </div>
                              <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                  <%= f.password_field :password, class: "form-control", placeholder: 'password' %>
                                </div>
                                <div class="col-sm-6">
                                  <%= f.password_field :password_confirmation, class: "form-control", placeholder: 'password confirmation' %>
                                </div>
                              </div>
                              <%= f.submit '新規作成', class: "btn btn-primary btn-user btn-block" %>
                            <% end %>
                              <hr>
                              <%= link_to "#", class: "btn btn-google btn-user btn-block" do %>
                                <i class="fab fa-google fa-fw"></i> Register with Google
                              <% end %>
                              <%= link_to "#", class: "btn btn-facebook btn-user btn-block" do %>
                                <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                              <% end %> 
                            <hr>
                            <div class="text-center">
                              <%= link_to "#", class: "small" do %>
                                Forgot Password?
                              <% end %>
                            </div>
                            <div class="text-center">
                              <%= link_to "#", class: "small" do %>
                                Already have an account? Login!
                              <% end %>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
</body>