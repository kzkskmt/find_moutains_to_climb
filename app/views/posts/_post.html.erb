<div class="row gx-4 gx-lg-5">
  <% @posts.each do |post| %>
    <div class="col-md-4 mb-3">
      <div class="card px-3 py-4 h-100">
        <!-- 自分の投稿には編集・削除ボタンを表示-->
        <% if current_user.own?(post) %>
          <%= link_to edit_post_path(post) do %>
            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 1.5rem">
              <i class="fas fa-pencil-alt"></i>
            </div>
          <% end %>
          <%= link_to post_path(post), method: :delete, data: { confirm: "削除しますか？"} do %>
            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
              <i class="fas fa-trash-alt"></i>
            </div>
          <% end %>
        <% end %>
        <div class="card-body text-center">
          <i class="fas fa-map-marked-alt text-primary mb-2"></i>
          <h4 class="m-0"><%= link_to "#{post.user.name}", user_path(post.user.id) %></h4>
          <hr class="my-2 mx-auto" />
          <h4 class="m-0"><%= post.title %></h4>
          <div class="small text-black-50"><%= post.body %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>