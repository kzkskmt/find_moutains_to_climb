<% if @posts.present? %>
  <section class="post-section bg-light">
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5">
        <h2 class="mb-4">登山した人の感想</h2>
        <% @posts.each do |post| %>
          <div class="col-md-4 mb-3">
            <div class="card px-3 py-4 h-100">
              <div class="card-body text-center">
                <i class="fas fa-map-marked-alt text-primary mb-2"></i>
                <h4 class="m-0"><%= post.user.name %></h4>
                <hr class="my-2 mx-auto" />
                <h4 class="m-0"><%= post.title %></h4>
                <div class="small text-black-50"><%= post.body %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>