<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>山編集</h1>
        <%= form_with model: @mountain, url: mountain_path(@mountain.id), local: true do |f| %>
          <div class="form-group">
            <%= f.label :name, class: "label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :name_en, class: "label" %>
            <%= f.text_field :name_en, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :image, class: "label" %>
            <%= f.file_field :image, class: "form-control" %>
          </div>
          <%= f.submit '編集する', class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>